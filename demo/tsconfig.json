{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@ht-rnd/json-schema-editor": ["../src/lib"],
      "@json-schema-editor": ["../components/json-schema-editor"],
      "@json-schema-editor/*": ["../components/json-schema-editor/*"]
    }
  },
  "include": ["src", "../src/lib", "../components/json-schema-editor"]
}

