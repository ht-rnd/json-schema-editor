{
  "name": "@ht-rnd/json-schema-editor",
  "version": "2.0.0",
  "license": "Apache-2.0",
  "description": "Headless JSON Schema Editor - provides hooks and utilities for building JSON Schema editors",
  "keywords": [
    "json-schema",
    "json-schema-editor",
    "headless",
    "react",
    "hook"
  ],
  "type": "module",
  "main": "./dist/lib/main.umd.js",
  "module": "./dist/lib/main.es.js",
  "types": "./dist/types/lib/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/types/lib/index.d.ts",
      "import": "./dist/lib/main.es.js",
      "require": "./dist/lib/main.umd.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ht-rnd/json-schema-editor"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "demo": "npm --prefix demo install && npm --prefix demo run dev",
    "demo:build": "npm --prefix demo install && npm --prefix demo run build"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "nanoid": "^5.1.6",
    "react-hook-form": "^7.66.1",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "19.2.6",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-istanbul": "^4.0.10",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jsdom": "^27.2.0",
    "lucide-react": "^0.554.0",
    "postcss": "^8.4.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-router-dom": "^7.11.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.10"
  }
}
